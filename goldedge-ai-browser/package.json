
{
  "name": "goldedge-ai-browser",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "release": "npx electron-builder --publish always"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "mathjs": "^11.0.0",
    "openai": "^4.2.1",
    "playwright": "^1.35.0",
    "node-cron": "^3.0.2",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "electron": "^26.2.0",
    "electron-builder": "^24.6.0",
    "electron-updater": "^6.1.1"
  },
  "build": {
    "appId": "com.goldedge.ai-browser",
    "productName": "GoldEdge AI Browser",
    "directories": { "output": "dist" },
    "publish": [{
      "provider": "github",
      "owner": "Josephwere",
      "repo": "goldedge-ai-browser"
    }],
    "files": ["electron/**/*", "config/**/*", ".env"],
    "mac": { "category": "public.app-category.utilities" },
    "win": { "target": "nsis" },
    "linux": { "target": ["AppImage","deb"] }
  },
  "author": "goldedgelabs@gmail.com"
}
